<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Gender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="196dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:text="Họ Tên:"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fullName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/fullName"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            app:layout_constraintBottom_toTopOf="@+id/Phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginStart="4dp"
            android:ems="10"
            android:text="Số điện thoại:"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.178" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="209dp"
            android:layout_height="43dp"
            android:inputType="phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.177"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="193dp"
            android:layout_height="39dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Giới tính:"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gioiTinh"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.286" />

        <Switch
            android:id="@+id/gender"
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_row="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.291"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="189dp"
            android:layout_height="43dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Trình độ"
            android:textSize="25dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="283dp" />

        <Spinner
            android:id="@+id/trinhdo"
            android:layout_width="202dp"
            android:layout_height="43dp"
            android:spinnerMode="dropdown"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="283dp"
            />
        <!--        Dòng năm -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="189dp"
            android:layout_height="45dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Tuổi"
            android:textSize="25dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="387dp" />

        <SeekBar
            android:id="@+id/Tuoi"
            android:layout_width="209dp"
            android:layout_height="42dp"
            android:max="90"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="387dp" />
        <!--        Dòng 4 -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="196dp"
            android:layout_height="46dp"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Thể thao"
            android:textSize="25dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="476dp" />

        <CheckBox
            android:id="@+id/football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:text="Bóng đá"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.693" />

        <CheckBox
            android:id="@+id/volleyball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="right"
            android:text="Bóng chuyền"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.693" />
        <!--        Dòng 6-->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Thể loại âm nhạc:"
            android:textSize="25dp"
            app:layout_constraintEnd_toStartOf="@+id/radioGroup2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="555dp" />


        <RadioGroup
            android:id="@+id/Music"
            android:layout_width="132dp"
            android:layout_height="140dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="512dp">

            <RadioButton
                android:id="@+id/Rock"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:text="Rock"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/Ballap"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:text="Ballap"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/Rap"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:text="Rap"
                android:textSize="25dp" />
        </RadioGroup>

        <Button
            android:id="@+id/submit"
            android:layout_row="7"
            android:layout_column="0"
            android:text="Submit"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/Reset"
            android:layout_row="7"
            android:layout_column="1"
            android:text="Reset"
            android:textSize="25dp"></Button>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>